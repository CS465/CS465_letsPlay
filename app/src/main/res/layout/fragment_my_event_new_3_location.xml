<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/EN3_linearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#D00043"
        >

        <TextView
            android:id="@+id/EN3_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ffff"
            android:fontFamily="sans-serif-medium"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/EN3_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where would you like to play ?"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="25dp"
            />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/EN3_editLocation"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/EN3_btnSearch"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="     Search"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        <!--MAP-->
        <WebView
            android:id="@+id/EN3_webViewMap"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <Button
            android:id="@+id/EN3_btnSelect"
            android:layout_width="100dp"
            android:layout_height   ="30dp"
            android:text="      Select"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>
