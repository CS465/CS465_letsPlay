<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/EN4_linearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#D00043"
        >

        <TextView
            android:id="@+id/EN4_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Info"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ffff"
            android:fontFamily="sans-serif-medium"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/EN4_txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is there anything you want your SportMate know before the game start ?"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="22dp"
            android:textStyle="bold"

            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:id="@+id/EN4_editText"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@drawable/big_edit"
            android:hint="i.e. dont forget to bring your shoes"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/EN4_txtPrice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/EN4_editPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="5"
                android:textSize="20sp"
                android:background="@drawable/small_button"
                android:padding="5dp"
                />

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/EN4_btnCreate"
        android:layout_width="100dp"
        android:layout_height   ="35dp"
        android:text="      Create"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
